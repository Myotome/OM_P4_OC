<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="answer_tv_add_meeting_style" parent="half_answer_tv_add_meeting_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_add_meeting_style" parent="answer_tv_add_meeting_style">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="half_answer_tv_add_meeting_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/_7sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="half_tv_add_meeting_style" parent="half_answer_tv_add_meeting_style">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/radius</item>
    </style>

    <style name="checkbox_room_filter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/charte_dark_green</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>

    </style>
</resources>